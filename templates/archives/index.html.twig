{% extends 'base.html.twig' %}

{% block title %}Rourvroy d'hier et d'aujourd'hui | Archives{% endblock %}

{% block body %}
{# Bloc titre Page Archives #}
<section>
    <div class="section-titre-page">
        <h2 class="titre-page-archives">Archives</h2>
    </div> 
</section>
{# Fin Bloc titre Page Archives #} 

{# Bloc section présentation des Archives #}
<section class="archives">
    <h2>Les archives</h2>

    <div class="div-archives">
        {% for Archives in Archives | sort((a, b) => a.id <=> b.id)%}
        <div class="card-archives" style="width: 18rem;">
            <img src="uploads/articles/{{Archives.image}}" class="card-img-top-archives" alt="{{ Archives.nom }}">
            <div class="card-body-archives">
            <h5 class="card-title-archives">{{ Archives.nom }}</h5>
            <h6 class="card-subtitle-archives mb-2 text-muted">{{ Archives.dates }}</h6>
            <p class="card-text-archives">{{ Archives.description | raw }}</p>
            {# <a href="#" class="btn btn-primary">Go somewhere</a> #}
            </div>
        </div>
        {% endfor %}
    </div>
</section>
{# Fin Bloc section présentation des Archives #}
{% endblock %}
