{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}

<section>
    <div class="section-titre-page">
        <h2 class="titre-page-register">S'enregistrer</h2>
    </div> 
</section>  

<section class="formulaire-register">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 style="font-family: Poppins, sans-serif; font-size: 20px; margin-bottom: 2rem; display:flex; justify-content:center; margin-top: 2rem;">S'enregistrer</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-register">Register</button>
    {{ form_end(registrationForm) }}
</section>
{% endblock %}
