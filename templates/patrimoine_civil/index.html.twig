        <div class="image-patrimoine-civil">
            <img src="uploads/articles/{{PatrimoineCivil.image}}" alt="{{ PatrimoineCivil.titre }}" class="img-civil">
        </div>
        <div class="texte-patrimoine-civil">
            <h3>{{ PatrimoineCivil.titre }}</h3>
            <p>{{ PatrimoineCivil.contenu | raw }}</p>
        </div>
    </div>
    {% endfor %}
    
</section> 
{# Fin Bloc section articles Page Le patrimoine civil #}

